<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base TextView Style -->
    <style name="TextViewStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/textSizeBody</item>
    </style>

    <style name="TextViewBoldStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeader">
        <item name="android:textSize">@dimen/textSizeHeader</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeaderCentered" parent="TextHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextSubHeader">
        <item name="android:textSize">@dimen/textSizeSubHeader</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">@dimen/textSizeBody</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:padding">@dimen/paddingNormal</item>
        <item name="android:layout_margin">@dimen/verticalMarginLarge</item>
    </style>

    <!-- Input Field Style -->
    <style name="InputFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeBody</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/paddingNormal</item>
        <item name="android:background">@drawable/input_background</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



</resources>